<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: {turbo_action: "advance"}, rel: page.rel, class: 'page-link' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, data: {turbo_action: "advance"}, rel: page.rel, class: 'page-link' %>
  </li>
<% end %>
