<% if @vehicle_report.student_status %>
  <%= render_flash_stream(scroll_to_top: true) %>
<% else %>
  <%= render_flash_stream(scroll_to_top: false) %>
<% end %>
<%= turbo_stream.update "#{@image_field_name}" do %>
  <%= render 'image_name', image_name: @image_name, image_field_name: "#{@image_field_name}" %>
<% end %>

<%= turbo_stream.update "student_status" do %>
  <%= render 'student_status', vehicle_report: @vehicle_report %>
<% end %>

<%= turbo_stream.update "student_status_mobile" do %>
  <%= render 'student_status_mobile', vehicle_report: @vehicle_report %>
<% end %>
