<%= form_with model: @reservation,
    data: { controller: "editreservation", editreservation_target: "form", action: "submit->editreservation#submitForm" } do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation" class="text-red-umred px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Term:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.program.term.name %>
    </p>
  </div>
  <%= form.hidden_field :updated_by, value: current_user.id %>
  <input type="hidden" id="unit_id" name="unit_id" value=<%= @unit_id %> data-editreservation-target="unit">

  <div class="py-2">
    <label class="body-lg-bold-text">
      Program:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.program.display_name_with_title %>
    </p>
  </div>

  <div class="py-2">
    <p class="body-lg-text ml-2 inline-block">
      <%= show_conflict(@reservation.status) %>
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    <div class="py-2">
      <label class="body-lg-bold-text">
        Current Site:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= @reservation.site.title %>
      </p>
    </div>
    <div>
      <label class="body-lg-bold-text">
        Current Number of People on Trip:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= @number_of_people_on_trip %>
      </p>
    </div>
    <div>
      <%= form.label :site_id, 'Site *', class: "fancy_label" %>
      <%= form.collection_select :site_id, @sites, :id, :title, { include_blank: "Select Site ..." }, { "data-reservation-target": "site", class: "input_text_field" } %>
    </div>
    <div>
      <%= form.label :number_of_people_on_trip, 'Number of People on Trip *', class: "fancy_label" %>
      <%= select_tag :number_of_people_on_trip, options_for_select(@number_of_seats, @number_of_people_on_trip), class: "input_text_field" %>
    </div>
    <div>
      <%= form.label :day_start, "Choose a Start Date", class: "fancy_label" %>
      <%= text_field_tag :day_start, @day_start,
        data: {
        controller: "flatpickr",
        flatpickr_date_format: "Y-m-d",
        flatpickr_min_date: @min_date
        }, "data-editreservation-target": "day_start", "data-action": "change->editreservation#changeDay",
        class: "input_text_field"
      %>
    </div>
    <div></div>

    <div class="py-2">
      <label class="body-lg-bold-text">
        Current Start Time:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= show_date_time(Reservation.find(reservation.id).start_time + 15.minute) %>
      </p>
    </div>
    <div class="py-2">
      <label class="body-lg-bold-text">
        Current End Time:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= show_date_time(Reservation.find(reservation.id).end_time - 15.minute)%>
      </p>
    </div>

  </div>

  <div class="col-span-2">
    <p class="body-sm-text mb-2">
      Select new start and end time if you want to change it
    </p>
  </div>
  <%= render 'start_end_time_edit' %>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Car:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= show_car(@reservation) %>
    </p>
  </div>

  <div class="mb-4">
    <%= label_tag 'Car *', nil, class: "fancy_label" %>
    <%= select_tag "car_id", options_from_collection_for_select(@cars, :id, :car_number, selected: @car_id), include_blank: "Select Car ...", class: "input_text_field",
    "data-editreservation-target": "car" %>
  </div>

  <div class="error_text mb-2" id="car_field"></div>

  <div class="inline">
    <%= form.submit class: "primary_button" %>
  </div>

  <%= link_to reservation_path(@reservation) do %>
    <span class="tertiary_button">Cancel
    <i class="fa fa-times" aria-hidden="true"></i>
    </span>
  <% end %>
<% end %>
