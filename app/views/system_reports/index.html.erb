<div class="w-full px-4">
  <h1 class="text-2xl font-bold mb-6">Reports</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    <% @reports_list.each do |report| %>
      <div class="bg-white rounded-lg shadow-md border border-gray-300 overflow-hidden max-w-sm">
        <div class="bg-gray-200 px-4 py-3 border-b border-gray-300">
          <p class="font-medium">
            <%= link_to report[:title], report[:url], class: "link_to" %>
          </p>
        </div>
        <div class="px-4 py-3">
          <p class="text-gray-700 text-sm">
            <%= report[:description] %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
