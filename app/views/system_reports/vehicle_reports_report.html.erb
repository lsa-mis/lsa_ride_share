<div class="md:flex justify-between items-center pb-4">
  <h1>Vehicle Reports Report</h1>
  <%= link_to 'Back to Reports', system_reports_path, class: "primary_button" %>
</div>
<p>This report shows Vehicle Reports statistics.</p>

<div class="py-3">
  <%= render 'filter_form', report_url: vehicle_reports_report_system_reports_path %>

  <% if params[:commit] && params[:format] == 'html' %>
    <%= turbo_frame_tag 'reports_table' do %>
      <%= render 'reports_table' %>
    <% end %>
  <% end %>
</div>
